.heading
  %h2=@text
%form{:id => "#{@type}form",:method => "post"}
  %label Email: 
  %input{:name => "email"}
  %label Password: 
  %input{:type => "password", :name => "signature"}
    %div
      %button.button{:type => "button",:onclick => "submitForm('##{@type}form','#{@submit}');"}=@text
      -if @login
        %button.button{:type => "button",:onclick => "submitForm('##{@type}form','/recover');"} Recover
